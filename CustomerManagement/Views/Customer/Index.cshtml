        $(document).ready(function () {

            var table = $('#servicesTable').DataTable({
                // dom: '<"top"f>rt<"bottom"lip><"clear">' Search bar top-left, rest default
            });

            // Checkbox change event
            $('#copyMobileToWhatsapp').change(function() {
                if ($(this).is(':checked')) {
                    // Copy Mobile Number to WhatsApp
                    var mobile = $('#MobileNumber').val();
                    $('#WhatsAppNumber').val(mobile);
                } else {
                    // Clear WhatsApp field if unchecked
                    $('#WhatsAppNumber').val('');
                }
            });
        });
    </script>


       
    </script>

    <partial name="_ValidationScriptsPartial" />
}
