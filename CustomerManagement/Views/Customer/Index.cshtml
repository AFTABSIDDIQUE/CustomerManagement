@model CustomerManagement.Models.CustomerPageViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <span class="me-3 fw-semibold">Customer Details:</span>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCustomerModal">
            Add Customer
        </button>
    </div>
    <div id="dataTables_filter_container"></div> <!-- Search box will be moved here -->
</div>


<!-- ✅ Add Customer Modal -->
<div class="modal fade" id="addCustomerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateCustomer" method="post">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="addCustomerModalLabel">Add New Customer</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewCustomer.CustomerName" class="form-label"></label>
                        <input asp-for="NewCustomer.CustomerName" class="form-control" placeholder="Enter customer name" />
                        <span asp-validation-for="NewCustomer.CustomerName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCustomer.MobileNumber" class="form-label"></label>
                        <input asp-for="NewCustomer.MobileNumber" class="form-control" placeholder="9988774455" />
                        <span asp-validation-for="NewCustomer.MobileNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCustomer.WhatsAppNumber" class="form-label"></label>
                        <input asp-for="NewCustomer.WhatsAppNumber" class="form-control" placeholder="9988774455" />
                        <span asp-validation-for="NewCustomer.WhatsAppNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCustomer.Reference" class="form-label"></label>
                        <input asp-for="NewCustomer.Reference" class="form-control" placeholder="Place/Short Name" />
                        <span asp-validation-for="NewCustomer.Reference" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCustomer.Email" class="form-label"></label>
                        <input asp-for="NewCustomer.Email" class="form-control" placeholder="example@gmail.com" />
                        <span asp-validation-for="NewCustomer.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ✅ Customer Table -->
<table class="table mt-4" id="example">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Mobile Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cus in Model.Customers)
        {
            <tr>
                <td>@cus.CustomerId</td>
                <td>@cus.CustomerName</td>
                <td>@cus.MobileNumber</td>
                <td>
                    <a asp-controller="CustomerService" asp-action="Index" asp-route-id="@cus.CustomerId" class="btn btn-primary btn-sm">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <link href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                // dom: '<"top"f>rt<"bottom"lip><"clear">' Search bar top-left, rest default
            });

            // Move the default DataTables search box into the custom container
            // $('#example_filter').appendTo('#dataTables_filter_container');
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
