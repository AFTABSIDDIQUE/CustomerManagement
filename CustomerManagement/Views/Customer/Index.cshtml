@model CustomerManagement.Models.CustomerPageViewModel
@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <span class="mr-3 font-weight-semibold">Customer Details:</span>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addCustomerModal">
            Add Customer
        </button>

    </div>
    <div id="dataTables_filter_container"></div> <!-- Search box will be moved here -->
</div>


<!-- ✅ Add Customer Modal (Two-row, two-column layout) -->
<div class="modal fade" id="addCustomerModal" data-backdrop="static" data-keyboard="false" tabindex="-1"
     role="dialog" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form asp-action="CreateCustomer" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addCustomerModalLabel">Add New Customer</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body px-4">
                    <!-- ✅ Row 1 -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NewCustomer.CustomerName" class="font-weight-bold">Customer Name</label>
                                <input asp-for="NewCustomer.CustomerName" class="form-control" placeholder="Enter customer name" />
                                <span asp-validation-for="NewCustomer.CustomerName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NewCustomer.MobileNumber" class="font-weight-bold">Mobile Number</label>
                                <input asp-for="NewCustomer.MobileNumber" maxlength="10" pattern="\d{10}" class="form-control" id="MobileNumber" placeholder="9988774455" />
                                <span asp-validation-for="NewCustomer.MobileNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- ✅ Row 2 -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <div class="form-check mb-2">
                                    <input type="checkbox" class="form-check-input" id="copyMobileToWhatsapp" />
                                    <label class="form-check-label" for="copyMobileToWhatsapp">Use Mobile Number as WhatsApp</label>
                                </div>
                                <label asp-for="NewCustomer.WhatsAppNumber" class="font-weight-bold">WhatsApp Number</label>
                                <input asp-for="NewCustomer.WhatsAppNumber" maxlength="10" pattern="\d{10}" class="form-control" id="WhatsAppNumber" placeholder="9988774455" />
                                <span asp-validation-for="NewCustomer.WhatsAppNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NewCustomer.Email" class="font-weight-bold">Email</label>
                                <input asp-for="NewCustomer.Email" type="email" class="form-control" placeholder="example@gmail.com" />
                                <span asp-validation-for="NewCustomer.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- ✅ Row 3 -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="NewCustomer.Reference" class="font-weight-bold">Reference</label>
                                <input asp-for="NewCustomer.Reference" class="form-control" placeholder="Place/Short Name" />
                                <span asp-validation-for="NewCustomer.Reference" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ✅ Customer Table -->
<div class="table-responsive mt-4">
    <table class="table table-bordered" id="servicesTable" width="100%" cellspacing="0">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Mobile Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot class="table-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Mobile Number</th>
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var cus in Model.Customers)
            {
                <tr>
                    <td>@cus.CustomerId</td>
                    <td>@cus.CustomerName</td>
                    <td>@cus.MobileNumber</td>
                    <td>
                        <a asp-controller="CustomerService" asp-action="Index" asp-route-id="@cus.CustomerId" class="btn btn-danger btn-sm">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


