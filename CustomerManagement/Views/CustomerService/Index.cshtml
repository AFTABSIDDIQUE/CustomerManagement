@using CustomerManagement.DTO.CustomerService
@model CustomerServicePageModel
@{
    Layout = "_Layout";
}
<h2>@(ViewBag.CustomerInfo.Name ?? "Customer") Service List</h2>

<!-- Container Div with border -->
<div style="border: 2px solid #007bff; padding: 20px; border-radius: 8px; margin-bottom: 20px;">
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="mb-3 d-flex">
                <strong class="me-2">Customer Name:</strong>
                <span>@(ViewBag.CustomerInfo.Name ?? "N/A")</span>
            </div>
            <div class="mb-3 d-flex">
                <strong class="me-2">Mobile Number:</strong>
                <span>@(ViewBag.CustomerInfo.Phone ?? "N/A")</span>
            </div>
            <div class="mb-3 d-flex">
                <strong class="me-2">Email:</strong>
                <span>@(ViewBag.CustomerInfo.Email ?? "N/A")</span>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="mb-3 d-flex">
                <strong class="me-2">Customer ID:</strong>
                <span>@(ViewBag.CustomerInfo.Id ?? "N/A")</span>
            </div>
            <div class="mb-3 d-flex">
                <strong class="me-2">WhatsApp Number:</strong>
                <span>@(ViewBag.CustomerInfo.WhatsApp ?? "N/A")</span>
            </div>
            <div class="mb-3 d-flex">
                <strong class="me-2">Reference:</strong>
                <span>@(ViewBag.CustomerInfo.Reference ?? "N/A")</span>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-3">
        <button type="button" class="btn btn-warning mr-2" data-toggle="modal" data-target="#UpdateCustomerModal">
            Update Customer Details
        </button>


        <button type="button" class="btn btn-primary mr-2" data-toggle="modal" data-target="#addCustomerModal">
            Add Service
        </button>

    </div>
</div>


<!-- Add Service Modal -->
<div class="modal fade" id="addCustomerModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="CreateCustomer" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCustomerModalLabel">Add New Customer</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="NewService.CustomerId" class="font-weight-bold">Customer Name</label>
                        <!-- Hidden input for CustomerId -->
                        <input asp-for="NewService.CustomerId" type="hidden" value="@ViewBag.CustomerInfo.Id" />
                        <input class="form-control" value="@(ViewBag.CustomerInfo.Name ?? "")" readonly />
                        <span asp-validation-for="NewService.CustomerId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewService.ServiceId" class="font-weight-bold">Service</label>
                        <select asp-for="NewService.ServiceId" class="form-control" asp-items="ViewBag.ServiceList">
                            <option value="">-- Select a service --</option>
                        </select>
                        <span asp-validation-for="NewService.ServiceId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewService.CustomerPrice" class="font-weight-bold">Price</label>
                        <input asp-for="NewService.CustomerPrice" class="form-control" placeholder="₹ Enter amount" />
                        <span asp-validation-for="NewService.CustomerPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Update Service Modal (Bootstrap 4) -->
<div class="modal fade" id="UpdateServiceModal" tabindex="-1" role="dialog" aria-labelledby="UpdateServiceModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="updateServiceForm" method="post" asp-action="UpdateService">
                <div class="modal-header">
                    <h5 class="modal-title" id="UpdateServiceModalLabel">Update Customer</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <!-- CustomerId (Hidden) -->
                    <input type="hidden" asp-for="UpdateService.CustomerId" id="CustomerId" name="UpdateService.CustomerId" />

                    <!-- Customer Name -->
                    <div class="form-group">
                        <label asp-for="UpdateService.CustomerName">Customer Name</label>
                        <input type="text" id="CustomerName" asp-for="UpdateService.CustomerName" class="form-control" readonly />
                    </div>

                    <input type="hidden" asp-for="UpdateService.ServiceId" id="ServiceId" name="UpdateService.ServiceId" />
                    <!-- Service Name -->
                    <div class="form-group">
                        <label asp-for="UpdateService.ServiceName">Service Name</label>
                        <input type="text" id="ServiceName" asp-for="UpdateService.ServiceName" class="form-control" readonly />
                    </div>

                    <!-- Customer Price -->
                    <div class="form-group">
                        <label asp-for="UpdateService.CustomerPrice">Price</label>
                        <input type="text" asp-for="UpdateService.CustomerPrice" id="CustomerPrice" name="UpdateService.CustomerPrice" class="form-control" placeholder="₹ Enter amount" />
                    </div>

                    <!-- Hidden field for CustomerServicesId (primary key for update) -->
                    <input type="hidden" id="CustomerServicesId" asp-for="UpdateService.CustomerServicesId" name="UpdateService.CustomerServicesId" />

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Update Customer Modal -->
<div class="modal fade" id="UpdateCustomerModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="updateCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="updateCustomerForm" method="post" asp-action="UpdateCustomerInfo">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateCustomerModalLabel">Update Customer Information</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="UpdateCustomer.CustomerName" class="font-weight-bold">Customer Name</label>
                                <input asp-for="UpdateCustomer.CustomerName" type="text" class="form-control" id="CustomerName" value="@ViewBag.CustomerInfo?.Name" required />
                            </div>

                            <div class="form-group">
                                <label asp-for="UpdateCustomer.MobileNumber" class="font-weight-bold">Mobile Number</label>
                                <input asp-for="UpdateCustomer.MobileNumber" type="text" class="form-control" id="CustomerPhone" value="@ViewBag.CustomerInfo?.Phone" />
                            </div>

                            <div class="form-group">
                                <label asp-for="UpdateCustomer.Email" class="font-weight-bold">Email</label>
                                <input asp-for="UpdateCustomer.Email" type="email" class="form-control" id="CustomerEmail" value="@ViewBag.CustomerInfo?.Email" />
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="UpdateCustomer.WhatsAppNumber" class="font-weight-bold">WhatsApp Number</label>
                                <input asp-for="UpdateCustomer.WhatsAppNumber" type="text" class="form-control" id="CustomerWhatsApp" value="@ViewBag.CustomerInfo?.WhatsApp" />
                            </div>

                            <div class="form-group">
                                <label asp-for="UpdateCustomer.Reference" class="font-weight-bold">Reference</label>
                                <input asp-for="UpdateCustomer.Reference" type="text" class="form-control" id="CustomerReference" value="@ViewBag.CustomerInfo?.Reference" />
                            </div>
                        </div>
                    </div>

                    <!-- Hidden Customer ID -->
                    <input asp-for="UpdateCustomer.CustomerId" type="hidden" id="CustomerId" value="@ViewBag.CustomerInfo?.Id" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


