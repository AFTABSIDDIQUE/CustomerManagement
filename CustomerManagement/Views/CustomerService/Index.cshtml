@section Scripts
{
    <script>
        $(document).ready(function () {
            // Initialize DataTables
            var table = $('#customerServicesTable').DataTable({
                paging: true,        // Enable pagination
                searching: true,     // Enable search box
                ordering: true,      // Enable column sorting
                info: true,          // Show info text
                lengthChange: true,   // Allow changing rows per page
                language: {
                            emptyTable: "No customer services available." //message when table is empty
                           }
            });

            // Handle Update Button Click (delegated binding for dynamic rows)
            $('#customerServicesTable').on('click', '.updateServiceBtn', function () {
                var id = $(this).data('id'); // Get the customer service ID

                $.ajax({
                    url: '/CustomerService/GetCustomerService/' + id, // Backend endpoint
                    type: 'GET',

                    success: function (data) {
                        $('#CustomerServicesId').val(data.customerServicesId);
                        $('#CustomerId').val(data.customerId);
                        $('#ServiceId').val(data.serviceId);
                        $('#CustomerName').val(data.customerName);
                        $('#ServiceName').val(data.serviceName); // make sure this comes from backend!
                        $('#CustomerPrice').val(data.customerPrice);
                    },
                    error: function () {
                        alert('Error loading service data.');
                    }
                });
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
