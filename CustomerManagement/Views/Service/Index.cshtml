@using CustomerManagement.DTO.Services
@model ServicePageViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <span class="me-3 fw-semibold">Service's' Details:</span>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCustomerModal">
            Add Services
        </button>
    </div>
    <div id="dataTables_filter_container"></div> <!-- Search box will be moved here -->
</div>


<!-- ✅ Add Customer Modal -->
<div class="modal fade" id="addCustomerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateService" method="post">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="addCustomerModalLabel">Add New Services</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="CreateService.ServiceName" class="form-label">Service Name</label>
                        <input asp-for="CreateService.ServiceName" class="form-control" placeholder="Enter customer name" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreateService.MinimumPriceList" class="form-label">Minimum Price</label>
                        <input asp-for="CreateService.MinimumPriceList" class="form-control" placeholder="₹ Enter Amount" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- ✅ Customer Table -->
<table class="table mt-4" id="example">
    <thead>
        <tr>
            <th>Service Id</th>
            <th>Service Name</th>
            <th>Minimum Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cus in Model.FetchServices)
        {
            <tr>
                <td>@cus.ServiceId</td>
                <td>@cus.ServiceName</td>
                <td>@cus.MinimumPriceList</td>
                <td>
                    <a asp-controller="" asp-action="" asp-route-id="@cus.ServiceId" class="btn btn-warning btn-sm">
                        Update
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <link href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                // dom: '<"top"f>rt<"bottom"lip><"clear">' Search bar top-left, rest default
            });

            // Move the default DataTables search box into the custom container
            // $('#example_filter').appendTo('#dataTables_filter_container');
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}


