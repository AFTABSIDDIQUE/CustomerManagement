@using CustomerManagement.DTO.Services
@model ServicePageViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <span class="me-3 fw-semibold">Service's' Details:</span>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addCustomerModal">
            Add Services
        </button>

    </div>
    <div id="dataTables_filter_container"></div> <!-- Search box will be moved here -->
</div>


<!-- ✅ Add Customer Modal -->
<div class="modal fade" id="addCustomerModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="CreateService" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCustomerModalLabel">Add New Services</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CreateService.ServiceName" class="font-weight-bold">Service Name</label>
                        <input asp-for="CreateService.ServiceName" class="form-control" placeholder="Enter customer name" />
                    </div>

                    <div class="form-group">
                        <label asp-for="CreateService.MinimumPriceList" class="font-weight-bold">Minimum Price</label>
                        <input asp-for="CreateService.MinimumPriceList" class="form-control" placeholder="₹ Enter Amount" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ✅ Update Service Modal -->
<div class="modal fade" id="updateCustomerModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="updateCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-action="UpdateService">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateCustomerModalLabel">Update Services</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" asp-for="UpdateService.ServiceId" id="ServiceId" name="UpdateService.ServiceId" />

                        <label asp-for="UpdateService.ServiceName" class="font-weight-bold">Service Name</label>
                        <input asp-for="UpdateService.ServiceName" id="ServiceName" class="form-control" placeholder="Enter customer name" />
                    </div>

                    <div class="form-group">
                        <label asp-for="UpdateService.MinimumPriceList" class="font-weight-bold">Minimum Price</label>
                        <input asp-for="UpdateService.MinimumPriceList" id="MinimumPriceList" class="form-control" placeholder="₹ Enter Amount" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- ✅ Customer Table -->
<div class="table-responsive mt-4">
    <table class="table table-bordered" id="servicesTable" width="100%" cellspacing="0">
        <thead class="table-light">
            <tr>
                <th>Service Id</th>
                <th>Service Name</th>
                <th>Minimum Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot class="table-light">
            <tr>
                <th>Service Id</th>
                <th>Service Name</th>
                <th>Minimum Price</th>
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            @if (Model != null && Model.FetchServices.Any())
            {
                @foreach (var cus in Model.FetchServices)
                {
                    <tr>
                        <td>@cus.ServiceId</td>
                        <td>@cus.ServiceName</td>
                        <td>@cus.MinimumPriceList</td>
                        <td>
                            <button type="button"
                                    class="btn btn-warning btn-sm updateServiceBtn"
                                    data-id="@cus.ServiceId"
                                    data-toggle="modal"
                                    data-target="#updateCustomerModal">
                                Update
                            </button>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>




@section Scripts
{

    <script>
        $(document).ready(function () {
            var table = $('#servicesTable').DataTable({
                                paging: true,        // Enable pagination
                                searching: true,     // Enable search box
                                ordering: true,      // Enable column sorting
                                info: true,          // Show info text
                                lengthChange: true   // Allow changing rows per page

            
            });

             // Handle Update Button Click (delegated binding for dynamic rows)
            $('#servicesTable').on('click', '.updateServiceBtn', function () {
                var id = $(this).data('id'); // Get the customer service ID

                $.ajax({
                    url: '/Service/GetCustomerService/' + id, // Backend endpoint
                    type: 'GET',


                   success: function (data) {
                        $('#ServiceId').val(data.serviceId);
                        $('#ServiceName').val(data.serviceName);       // make sure this comes from backend!
                        $('#MinimumPriceList').val(data.minimumPriceList);

                    },
                    error: function () {
                        alert('Error loading service data.');
                    }
                });
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}


