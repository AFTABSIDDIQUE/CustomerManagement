@model StockPageViewModel
@{
    Layout = "_Layout";
}

<!-- Container Div with border -->
<div style="border: 2px solid #007bff; padding: 20px; border-radius: 8px; margin-bottom: 20px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
            <span class="mr-3 font-weight-semibold">Stock Details:</span>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addStockModal">
                Add Stock
            </button>

        </div>
        <div id="dataTables_filter_container"></div> <!-- Search box will be moved here -->
    </div>

</div>

<!-- Add Stock Modal -->
<div class="modal fade" id="addStockModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="AddStock" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addCustomerModalLabel">Add Stock</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="AddNewStock.StockName" class="font-weight-bold">Stock Name</label>
                        <input asp-for="AddNewStock.StockName" class="form-control" placeholder="Stock Name" />
                        <span asp-validation-for="AddNewStock.StockName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddNewStock.HomeQuantity"  class="font-weight-bold">Home Qty</label>
                        <input asp-for="AddNewStock.HomeQuantity" id="HomeQty"  class="form-control" placeholder="₹ Enter Qty" />
                        <span asp-validation-for="AddNewStock.HomeQuantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddNewStock.ShopQuantity" class="font-weight-bold">Shop Qty</label>
                        <input asp-for="AddNewStock.ShopQuantity" id="ShopQty"  class="form-control" placeholder="₹ Enter Qty" />
                        <span asp-validation-for="AddNewStock.ShopQuantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddNewStock.TotalQuantity" class="font-weight-bold">Total Qty</label>
                        <input asp-for="AddNewStock.TotalQuantity" id="TotalQty" readonly class="form-control" placeholder="₹ Enter Qty" />
                        <span asp-validation-for="AddNewStock.TotalQuantity" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ✅ Customer Table -->
<div class="table-responsive mt-4">
    <table class="table table-bordered" id="servicesTable" width="100%" cellspacing="0">
        <thead class="table-light">
            <tr>
                <th>StockId</th>
                <th>Stock Name</th>
                <th>Home Qty</th>
                <th>Shop Qty</th>
                <th>Total Qty</th>
                @* <th>Price</th> *@
                <th>Action</th>
            </tr>
        </thead>
        <tfoot class="table-light">
            <tr>
                <th>StockId</th>
                <th>Stock Name</th>
                <th>Home Qty</th>
                <th>Shop Qty</th>
                <th>Total Qty</th>
                @* <th>Price</th> *@
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var cus in Model.FetchStocks)
            {
                <tr>
                    <form asp-action="UpdateStock" method="post">
                        <input type="hidden" name="_method" value="PUT" /> <!-- simulate PUT -->
                        <input type="hidden" name="UpdateStock.StockId" value="@cus.StockId" />
                        <input type="hidden" name="UpdateStock.StockName" value="@cus.StockName" />

                    <td>@cus.StockId</td>
                    <td>@cus.StockName</td>

                    <!-- Home Quantity -->
                    <td>
                        <div class="input-group input-group-sm">
                            <button type="button" class="btn btn-outline-secondary" onclick="changeQty('@cus.StockId','home',-1)">-</button>
                            <input type="text" class="form-control text-center" style="max-width:70px;" name="UpdateStock.HomeQuantity" id="homeQty-@cus.StockId" value="@cus.HomeQuantity" >
                            <button type="button" class="btn btn-outline-secondary" onclick="changeQty('@cus.StockId','home',1)">+</button>
                        </div>
                    </td>

                    <!-- Shop Quantity -->
                    <td>
                        <div class="input-group input-group-sm">
                            <button type="button" class="btn btn-outline-secondary" onclick="changeQty('@cus.StockId','shop',-1)">-</button>
                            <input type="text" class="form-control text-center" style="max-width:70px;" name="UpdateStock.ShopQuantity" id="shopQty-@cus.StockId" value="@cus.ShopQuantity" >
                            <button type="button" class="btn btn-outline-secondary" onclick="changeQty('@cus.StockId','shop',1)">+</button>
                        </div>
                    </td>

                    <!-- Total Quantity -->
                    <td>
                        <input type="text" class="form-control text-center" style="max-width:80px;" name="UpdateStock.TotalQuantity" id="totalQty-@cus.StockId" value="@cus.TotalQuantity" readonly>
                    </td>

                    <!-- Update Button -->
                    <td>
                        <button type="submit" class="btn btn-success btn-sm w-100">Update</button>
                    </td>
                    </form>
                </tr>


            }
        </tbody>
    </table>
</div>


