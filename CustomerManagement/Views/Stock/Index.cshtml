            var table = $('#servicesTable').DataTable({
                // dom: '<"top"f>rt<"bottom"lip><"clear">' Search bar top-left, rest default
            });

        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const homeQtyInput = document.getElementById("HomeQty");
            const shopQtyInput = document.getElementById("ShopQty");
            const totalQtyInput = document.getElementById("TotalQty");

            function updateTotal() {
                const homeQty = parseFloat(homeQtyInput.value) || 0;
                const shopQty = parseFloat(shopQtyInput.value) || 0;
                const total = homeQty + shopQty;
                totalQtyInput.value = total;
            }

            // Add event listeners for live updates
            homeQtyInput.addEventListener("input", updateTotal);
            shopQtyInput.addEventListener("input", updateTotal);
        });
    </script>

    <script>
        function changeQty(stockId, type, delta) {
            const qtyInput = document.getElementById(`${type}Qty-${stockId}`);
            let qty = parseInt(qtyInput.value);
            qty += delta;
            if (qty < 0) qty = 0; // Prevent negative quantity
            qtyInput.value = qty;

            // Update Total Quantity dynamically
            const homeQty = parseInt(document.getElementById(`homeQty-${stockId}`).value);
            const shopQty = parseInt(document.getElementById(`shopQty-${stockId}`).value);
            document.getElementById(`totalQty-${stockId}`).value = homeQty + shopQty;
        }
    </script>


    <partial name="_ValidationScriptsPartial" />
}







